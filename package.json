{
  "name": "read-parquet-online",
  "version": "1.0.0",
  "description": "Online reader for Apache Parquet",
  "main": "dist/build/index.js",
  "typings": "dist/types",
  "scripts": {
    "start-dev": "node -r ts-node/register src/index.ts",
    "build": "tsc",
    "build-all": "npm run build && cd client && npm run build && cd ..",
    "lint": "eslint --ext ts src/**  __tests__/unit/** __tests__/util/**",
    "test": "jest --runInBand --detectOpenHandles",
    "start": "npm run build && node dist/src/index.js",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -f Dockerfile -t ${npm_package_name} --build-arg GIT_HASH=$(git rev-parse HEAD) --build-arg GIT_REF=$(git branch | grep \\* | cut -d ' ' -f2) --build-arg GIT_URL=$(git config --get remote.origin.url) .",
    "docker:start": "docker-compose -f docker-compose.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.yml down",
    "docker:tail": "docker-compose -f docker-compose.yml logs -f",
    "docker:start-dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:stop-dev": "docker-compose -f docker-compose.dev.yml down"
  },
  "git": {
    "hash": "%GIT_HASH%",
    "ref": "%GIT_REF%",
    "url": "%GIT_URL%"
  },
  "keywords": [
    "parquet",
    "apacheparquet"
  ],
  "author": "Ilya Amelevich <ilya.amelevich@ya.ru>",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^20.0.1",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "conf": "^7.1.2",
    "hapi-pino": "^8.3.0",
    "hapi-swagger": "^14.0.0",
    "joi": "^17.2.1",
    "lodash": "^4.17.20",
    "parquetjs": "^0.11.2"
  },
  "devDependencies": {
    "@types/conf": "^3.0.0",
    "@types/hapi-pino": "^8.0.1",
    "@types/hapi__hapi": "^19.0.4",
    "@types/hapi__inert": "^5.2.1",
    "@types/hapi__vision": "^5.5.2",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.11.10",
    "@types/parquetjs": "^0.10.2",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "verbose": true,
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/__tests__/unit/**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": false,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build",
      "pre-push": "npm run lint && npm run build && npm run test"
    }
  },
  "files": [
    "dist"
  ]
}
